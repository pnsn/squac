
/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "paths": {
      "squacapi": [
        "./dist/squacapi"
      ],
      "widgets" : [
        "./dist/widgets"
      ],
      "@core": ["./projects/squac-ui/src/app/core"],
      "@core/*": ["./projects/squac-ui/src/app/core/*"],

      "@shared/*": ["./projects/squac-ui/src/app/shared/*"],
      "@squacapi/*": ["./projects/squac-ui/src/app/squacapi/*"],
      "@dashboard/*": ["./projects/squac-ui/src/app/features/dashboard/*"],
      "@channelGroup/*": ["./projects/squac-ui/src/app/features/channel-group/*"],
      "@metric/*": ["./projects/squac-ui/src/app/features/metric/*"],
      "@monitor/*": ["./projects/squac-ui/src/app/features/monitor/*"],
      "@user/*": ["./projects/squac-ui/src/app/features/user/*"]
    },
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,
    "fullTemplateTypeCheck": true,
    "enableIvy": true,
    "importHelpers": true
  }
}
